<form>
	<title>{PRIVATE.FORM_ACTION_TITLE} User</title>
	<action>index.php?sub=workers&action=store</action>
	<name>edit</name>
	<width>580</width>
	<encoding>multipart/form-data</encoding>

	<formtag>true</formtag>
	<border>true</border>
	
	<buttons>		
		<set>
			<footer>true</footer>
			<header>true</header>
		</set>

		<return onclick="" button="return">
			<location>{RETURNURL}</location>
		</return>

		<save onclick="" button="saveall">
			<location>javascript:document.forms[0].submit();</location>
		</save>

	</buttons>

	<redirect>index.php?sub=workers&action=details&user_id={USER_ID}</redirect>

	<vars>	
		<action_title import="($_GET[user_id] || $_POST[user_id] )? 'Edit' : 'Add'" type="eval" />
		<returnurl import="$_GET['return'] ? urldecode($_GET['return']) : ($_POST['return'] ? urldecode($_POST['return']) : 'index.php?sub=workers')" type="eval" />
	</vars>

	<fields>
		<user_id type="hidden" hidden="true"/>
		<user_date type="hidden" default="time()" action="eval"/>
		<user_level type="hidden" forcevalue="1" action="eval"/>
		<return type="hidden" default="$_GET['return']" action="eval" />
		<returnurl type="hidden" default="$_GET['return']" action="eval" />

		<user_name type="textbox" size="30" required="true" validate="A:2:100"> 
			<title>Name</title>
		</user_name>

		<user_login type="textbox" size="20" required="true" unique="true" validate="A:2:100"> 
			<title>Login</title>
		</user_login>

		<user_password type="password" size="20" required="true" validate="A:2:100"> 
			<title>Password</title>
		</user_password>

		<user_password_confirm type="password" size="20" required="true" validate="A:2:100"> 
			<title>Confirm</title>
		</user_password_confirm>

		<user_email type="textbox" size="30" unique="true" required="true" validate="E:2:100"> 
			<title>Email </title>
		</user_email>

		<user_email2 type="textbox" size="30"> 
			<title>Secondary Email </title>
		</user_email2>


		<subtitle type="subtitle" title="Contact Info" />

		<user_address type="textbox" size="40"> 
			<title>Address</title>
		</user_address>

		<user_city type="textbox" size="20"> 
			<title>City</title>
		</user_city>

		<user_state type="USstates" empty="true"> 
			<title>State</title>
		</user_state>

		<user_zip type="textbox" size="15"> 
			<title>Zip Code</title>
		</user_zip>

		<user_country type="countries" empty="true"> 
			<title>Country</title>
		</user_country>

		<user_phone type="textbox" size="20"> 
			<title>Phone</title>
		</user_phone>

		<subtitle2 title="Instant Messengers" type="subtitle" />
		
		<user_im_aol type="textbox" size="20">
			<title>AOL</title>
		</user_im_aol>

		<user_im_icq type="textbox" size="20">
			<title>ICQ</title>
		</user_im_icq>

		<user_im_msn type="textbox" size="20">
			<title>MSN</title>
		</user_im_msn>

		<user_im_yahoo type="textbox" size="20">
			<title>Yahoo</title>
		</user_im_yahoo>

		<user_im_other type="textbox" size="30">
			<title>Other</title>
		</user_im_other>

  	</fields>
</form>
