<form>
	
	<title>Users</title>
	<width>580</width>
	<border>true</border>
	
	<fields>
		<_count header="No" suffix="." width="25" align="center" />
		<user_name align="left" header="Name"/>
		<user_login width="150" align="center" header="Login"/>
	</fields>

	<vars>
		<user_status import="$_GET['user_status']" type="eval" />
	</vars>

	<header>
		<titles>true</titles>

		<buttons>

			<add button="addnew">
				<location>index.php?sub=workers&action=add&user_status={USER_STATUS}&return={CURRENT_PAGE}</location>
			</add>
		</buttons>
	</header>

	<buttons>

		<delete onclick="" button="delete" >
			<location>javascript:if(confirm('Are you sure you want to delete this record ?')) window.location='index.php?sub=workers&action=delete&user_id={USER_ID}&returnURL={CURRENT_PAGE}'</location>
		</delete>

		<details onclick="" button="details" >
			<location>index.php?sub=workers&action=details&user_id={USER_ID}&returnURL={CURRENT_PAGE}</location>
		</details>

	</buttons>
	<SQL>
		<vars>
			<sql_page type="page"/>
			<sql_items type="form" var="items" />
			<sql_table import="$this->tables['users']" type="eval"/>

			<sql_condition import="WHERE user_level=1 " type="var"/>
	
		</vars>
		<query>SELECT * FROM `{SQL_TABLE}` {SQL_CONDITION} ORDER BY user_name ASC LIMIT {SQL_PAGE},{SQL_ITEMS} </query>
		<count table="{SQL_TABLE}" condition="{SQL_CONDITION}" />
	</SQL>
	<items>25</items>

</form>