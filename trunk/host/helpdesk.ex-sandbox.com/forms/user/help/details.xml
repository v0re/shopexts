<form>
	<title>Help Request Details</title>
	<action>index.php</action>
	<name>edit</name>
	<method>get</method>
	<width>580</width>

	<formtag>true</formtag>
	<border>true</border>
	
	<buttons>		
		<set>
			<header>true</header>
		</set>

		<return onclick="" button="return">
			<location>{PRIVATE.FORM_PREVIOUS_PAGE}</location>
		</return>

	</buttons>

	<vars>
		<type import="$_GET['type']" type="eval" />
		<title type="eval" import="$_GET['type'] == 1 ? 'Departments' : ($_GET['type'] == 2 ? 'Request Types' : 'Device Type')" />
	</vars>

	<redirect>index.php?mod=myprofile&sub=accounts</redirect>

	<fields>
		<call_id type="hidden"/>

		<call_status type="relation">
			<title>Status</title>
			<options>
				<option name="0">active</option>
				<option name="1">closed</option>
			</options>
		</call_status>

		<call_first_name type="text">
			<title>Name</title>
		</call_first_name>

		<call_phone type="text" size="20">
			<title>Phone</title>
		</call_phone>

		<call_email type="text" size="25">
			<title>Email</title>
		</call_email>
<!--
		<mod type="hidden" default="$_GET[mod]" action="eval" />
		<sub type="hidden" default="$_GET[sub]" action="eval" />
		<action type="hidden" default="$_GET[action]" action="eval" />

		<section type="droplist" onchange="document.forms[0].submit();" default="$_GET[section]" action="eval" width="300">
			<title>View Section</title>
			<options>
				<option name="0">Request Details</option>
				<option name="1">Notes</option>
			</options>
			<description>Select the section you want to apear bellow.</description>
		</section>
-->
		<subtitle type="subtitle" title="Details" />

		<call_department type="relation">
			<title>Department</title>
			<relation table="types" id="type_id" text="type_name" condition="type=1" order="type_name" ordermode="ASC"/>
		</call_department>

		<call_request type="relation">
			<title>Request Type</title>
			<relation table="types" id="type_id" text="type_name" condition="type=2" order="type_name" ordermode="ASC"/>
		</call_request>

		<call_device type="relation">
			<title>Device Type</title>
			<relation table="types" id="type_id" text="type_name" condition="type=3" order="type_name" ordermode="ASC"/>
		</call_device>

		<call_staff type="relation">
			<title>Assigned Staff</title>
			<relation table="types" id="type_id" text="type_name" condition="type=''" order="type_name" ordermode="ASC"/>
		</call_staff>

		<call_date type="text" action="date" params="m/d/Y g:i a">
			<title>Date/Time</title>
		</call_date>

		<call_date2 type="text" action="date" params="m/d/Y g:i a">
			<title>Solved Date/Time</title>
		</call_date2>

		<call_details type="text">			
			<title>Details</title>			
		</call_details>

		<call_solution type="text">			
			<title>Solution</title>			
		</call_solution>

	</fields>
</form>
