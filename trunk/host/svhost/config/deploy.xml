<deploy>
	
	<licence file="license.txt" />

	<product_name>ECstore</product_name>

	<installer>
		
		<title>ECstore installer</title>
		
		<banner><![CDATA[
		<h1 id="ECstore-ver">ECstore<sup style="color:red;font-size:12px">Alpha</sup></h1>
